version: "2.1"

services:
  blocky:
    image: spx01/blocky
    container_name: blocky
    restart: unless-stopped
    ports:
      - "53:53/tcp"
      - "53:53/udp"
{% if blocky_doh %}
{% if blocky_behind_proxy %}
      - "127.0.0.1:{{blocky_http_port}}:4000"
{% else %}
      - "443:443"
{% endif %}
{% endif %}
    environment:
      - TZ=Asia/Dhaka
    volumes:
      # config file
      - ./config.yml:/app/config.yml
